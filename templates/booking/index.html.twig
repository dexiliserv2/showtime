{% extends 'base.html.twig' %}

{% block title %}Bookings index{% endblock %}

{% block content %}
    <h1 class="text-2xl">Bookings</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Full name</th>
            <th>Festival</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.email }}</td>
                <td>{{ booking.fullName }}</td>
                <td>{{ booking.festival.name }}</td>
                <td>
                    <a href="{{ path('app_booking_show', {'id': booking.id}) }}" class="btn">Show</a>
                    {{ include('booking/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
