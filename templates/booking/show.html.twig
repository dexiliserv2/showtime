{% extends 'base.html.twig' %}

{% block title %}Festival{% endblock %}

{% block body %}
    <style>
        h1 {
            padding-left: 15px;
            padding-top: 10px;
        }
    </style>
    <h1>{{ festival.name }} - Information</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ festival.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ festival.name }}</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>{{ festival.location }}</td>
        </tr>
        <tr>
            <th>Dates</th>
            <td>{{ festival.startDate|date('d M, Y') }} - {{ festival.endDate|date('d M, Y') }}</td>
        </tr>
        <tr>
            <th>Bands playing</th>
            <td>
                {% if festival.bands is not empty %}
                    {{ festival.bands|map(band => band.name)|join(', ') }}
                {% else %}
                    No bands listed yet, check back soon.
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <div class="flex flex-row">
        <div class="basis-3xs">
            <button type="button" class="btn" onclick="window.location.href='{{ path('app_festival_index') }}';">Back to
                list
            </button>
        </div>
        <div class="basis-3xs">
            <button type="button" class="btn"
                    onclick="window.location.href='{{ path('app_festival_edit', {'id': festival.id}) }}';">Edit
            </button>
        </div>
        <div class="basis-3xs">
            {{ include('festival/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
