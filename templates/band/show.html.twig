{% extends 'base.html.twig' %}

{% block title %}Band{% endblock %}

{% block body %}
    <style>
        h1 {
            padding-left: 15px;
            padding-top: 10px;
        }
    </style>
    <h1 class="text-2xl">{{ band.name }} Information</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ band.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ band.name }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ band.genre.value }}</td>
        </tr>
        </tbody>
    </table>

    <div class="flex flex-row">
        <div class="basis-3xs">
            <button type="button" class="btn" onclick="window.location.href='{{ path('app_band_index') }}';">
                Back to list
            </button>
        </div>

        <div class="basis-3xs">
            <button type="button" class="btn"
                    onclick="window.location.href='{{ path('app_band_edit', {'id': band.id}) }}';">
                Edit
            </button>
        </div>

        <div class="basis-3xs">
            {{ include('band/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
